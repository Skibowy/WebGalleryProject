@model WebGalleryProject.Models.TagImagesViewModel

<div class="container">
    <h2>Images tagged with: @Model.Tag.Name</h2>

    <div class="row">
        @foreach (var image in Model.Images)
        {
            <div class="col-md-4">
                <div class="card mb-4">
                    <img src="data:image/png;base64,@image.Base64Image" class="card-img-top" alt="@image.Name">
                    <div class="card-body">
                        <h5 class="card-title">@image.Name</h5>
                        <p class="card-text">@image.Prompt</p>
                        <a href="@Url.Action("Details", "Image", new { id = image.Id.ToString() })" class="btn btn-primary">View Details</a>
                    </div>
                </div>
            </div>
        }
    </div>

    @if (!Model.Images.Any())
    {
        <p>No images found with this tag.</p>
    }
</div>
