@model MongoWebGallery.Models.Technology

<div class="container my-5">
    <div class="bg-dark bg-opacity-75 p-4 rounded shadow">
        <h2 class="text-white mb-4">Edytuj technologię</h2>

        <form asp-action="Edit">
            <div class="form-group mb-3">
                <label asp-for="Name" class="form-label text-white">Nazwa</label>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="form-group mb-3">
                <label asp-for="Url" class="form-label text-white">URL</label>
                <input asp-for="Url" class="form-control" />
                <span asp-validation-for="Url" class="text-danger"></span>
            </div>
            <input type="hidden" asp-for="Id" />
            <div class="d-flex">
                <button type="submit" class="btn btn-primary me-2">Zapisz</button>
                <a asp-action="Index" class="btn btn-secondary">Anuluj</a>
            </div>
        </form>
    </div>
</div>
