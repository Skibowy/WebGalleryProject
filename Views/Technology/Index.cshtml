@model IEnumerable<MongoWebGallery.Models.Technology>

<div class="container my-5">
    <div class="bg-dark bg-opacity-75 p-4 rounded shadow">
        <h2 class="text-white mb-4">Zarządzaj technologiami</h2>
        <a asp-action="Create" class="btn btn-primary mb-3">Dodaj nową technologię</a>

        <div class="table-responsive">
            <table class="table table-striped table-hover table-dark">
                <thead>
                    <tr>
                        <th>Nazwa</th>
                        <th>URL</th>
                        <th>Status</th>
                        <th>Akcje</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var technology in Model)
                    {
                        <tr>
                            <td>@technology.Name</td>
                            <td><a href="@technology.Url" target="_blank">@technology.Url</a></td>
                            <td>
                                @if (technology.IsApproved)
                                {
                                    <span class="badge bg-success">Zatwierdzona</span>
                                }
                                else
                                {
                                    <span class="badge bg-warning">Oczekuje na zatwierdzenie</span>
                                }
                            </td>
                            <td>
                                <div class="d-flex justify-content-center">
                                    <a asp-action="Edit" asp-route-id="@technology.Id" class="btn btn-sm btn-secondary mx-1">Edytuj</a>
                                    <form asp-action="Delete" asp-route-id="@technology.Id" method="post" style="display:inline;">
                                        <button type="submit" class="btn btn-sm btn-danger mx-1">Usuń</button>
                                    </form>
                                </div>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>
