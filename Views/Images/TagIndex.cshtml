@model WebGalleryProject.Models.TagImagesViewModel

<style>
    .image-container {
        background-color: rgba(211, 211, 211, 0.5); /* matowe szare tło */
        border: 2px solid #ccc; /* szare obramowanie */
        border-radius: 10px; /* zaokrąglenie rogów */
        padding: 15px; /* odstęp wewnętrzny */
        margin-bottom: 20px; /* odstęp między kontenerami */
    }
</style>

<div class="container image-container">
    <h2>Images tagged with: @Model.Tag.Name</h2>

    <div class="row">
        @foreach (var image in Model.Images)
        {
            <div class="col-md-4 mb-4">
                <a href="@Url.Action("Details", "Image", new { id = image.Id.ToString() })">
                    <img src="data:image/png;base64,@image.Base64Image" class="img-fluid" alt="@image.Name" style="width: 100%; height: 200px; object-fit: cover; border-radius: 5px; cursor: pointer;" />
                </a>
            </div>
        }
    </div>

    @if (!Model.Images.Any())
    {
        <p>No images found with this tag.</p>
    }
</div>
